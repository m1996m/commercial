{% extends 'base.html.twig' %}

{% block title %}Centre index{% endblock %}

{% block body %}
    <h1>Centre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Tel</th>
                <th>Email</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for centre in centres %}
            <tr>
                <td>{{ centre.id }}</td>
                <td>{{ centre.nom }}</td>
                <td>{{ centre.adresse }}</td>
                <td>{{ centre.tel }}</td>
                <td>{{ centre.email }}</td>
                <td>{{ centre.ville }}</td>
                <td>{{ centre.pays }}</td>
                <td>
                    <a href="{{ path('centre_show', {'id': centre.id}) }}">show</a>
                    <a href="{{ path('centre_edit', {'id': centre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('centre_new') }}">Create new</a>
{% endblock %}
