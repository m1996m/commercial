{% extends 'base.html.twig' %}

{% block title %}Rayon index{% endblock %}

{% block body %}
    <h1>Rayon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantite</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rayon in rayons %}
            <tr>
                <td>{{ rayon.id }}</td>
                <td>{{ rayon.quantite }}</td>
                <td>{{ rayon.createdAt ? rayon.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('rayon_show', {'id': rayon.id}) }}">show</a>
                    <a href="{{ path('rayon_edit', {'id': rayon.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('rayon_new') }}">Create new</a>
{% endblock %}
